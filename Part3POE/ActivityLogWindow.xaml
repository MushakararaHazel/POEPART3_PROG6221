<Window x:Class="Part3POE.ActivityLogWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Activity Log Summary" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Log Display -->
        <ListBox x:Name="lstActivityLog" Grid.Row="1" FontSize="14" />

        <!-- Close Button -->
        <Button Content="Close" Grid.Row="2" HorizontalAlignment="Right" Width="100" Margin="0,10,0,0" Click="Close_Click"/>
    </Grid>
</Window>

     